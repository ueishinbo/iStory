<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iStory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectTest">
        <activity
            android:name="com.example.iStory.PersonalSettingActivity"
            android:exported="true" />
        <activity
            android:name="com.example.iStory.PostSectionActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.example.iStory.MultiSectionDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.example.iStory.SectionDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.example.iStory.StoryDetailActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.example.iStory.HomePageActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.example.iStory.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.example.iStory.ViewStoryText"
            android:exported="true" />
        <activity
            android:name="com.example.iStory.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>